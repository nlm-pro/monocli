{
  "name": "@monocli/cli",
  "version": "0.4.0",
  "description": "one CLI to rule them all",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "$npm_package_bin_monocli",
    "prerelease": "npm run build",
    "release": "standard-version",
    "release:test": "standard-version --dry-run",
    "postrelease": "node publish.js && git push --follow-tags",
    "build": "rimraf ./dist && tsc",
    "watch": "rimraf ./dist && concurrently --raw -n tsc,eslint \"tsc -w\" \"esw --fix -w ./{src,test}/**/*.ts\"",
    "lint:prettier": "prettier --write ./{src,test}/**/*.{md,js,ts}",
    "lint:eslint": "eslint \"{src,test}/**/*.{js,ts}\" --fix",
    "lint:check": "prettier --check ./{src,test}/**/*.{md,js,ts}; eslint \"{src,test}/**/*.{js,ts}\"",
    "lint": "tsc --noEmit && prettier --write ./{src,test}/**/*.{md,js,ts} && eslint \"{src,test}/**/*.{js,ts}\" --quiet --fix",
    "eslint-check": "eslint --print-config ./src/index.ts | eslint-config-prettier-check",
    "tap": "tap -J --timeout 300",
    "tap-nocleanup": "NO_TEST_CLEANUP=1 tap -J --timeout 300",
    "tap-coverage": "tap -J --coverage --timeout 600",
    "tap-strict-coverage": "tap -J --coverage --timeout 600 --coverage-map=coverage-map.js",
    "test-tap": "npm run tap -- \"test/tap/**/*.ts\"",
    "tap-snapshot": "npm run tap -- --snapshot",
    "test-coverage": "npm run tap-coverage -- \"test/tap/**/*.ts\"",
    "test-strict-coverage": "npm run tap-strict-coverage -- \"test/tap/**/*.ts\"",
    "test": "npm run test-tap --",
    "pretest": "npm run build",
    "test:watch": "npm run test-coverage -- --watch",
    "postinstall": "patch-package"
  },
  "author": "Noël Macé",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/noelmace/monocli.git"
  },
  "homepage": "https://github.com/noelmace/monocli#readme",
  "keywords": [
    "git",
    "cli",
    "monorepo",
    "repository",
    "devtool"
  ],
  "bin": {
    "monocli": "./bin/monocli"
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "npmlog": "^4.1.2",
    "promisify-child-process": "^3.1.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.1.0",
    "@types/node": "^13.7.2",
    "@types/npmlog": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-watch": "^6.0.1",
    "husky": "^4.2.3",
    "libnpmpublish": "^3.0.1",
    "lint-staged": "^10.0.7",
    "node-ts": "^5.0.5",
    "patch-package": "^6.2.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "standard-version": "^7.1.0",
    "tap": "^14.10.7",
    "typescript": "^3.7.5"
  }
}
